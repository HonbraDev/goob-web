---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="flex py-2 gap-6 items-center">
	<h2 class="text-2xl font-bold">
		<a href="/" class="hover:underline focus:underline focus:outline-none"
			>{SITE_TITLE}</a
		>
	</h2>

	{/* If it overflows, blame the user for having a screen that's too small */}
	<nav class="flex gap-4 overflow-x-auto w-full">
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="/links">Links</HeaderLink>
	</nav>
</header>
